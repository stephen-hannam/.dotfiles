[user]
    me = 
    email = 
[core]
    editor = vim
[merge]
    tool = mymeld
    conflictstyle = diff3
[mergetool "mymeld"]
    cmd = meld $LOCAL $MERGED $REMOTE
[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    mt = mergetool
    stno = status --untracked=no
    unstage = reset HEAD --
    last = log -1 HEAD
    changes=diff --name-status -r
    diffstat=diff --stat -r
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format: %h -> { %p }' \"$@\" | sed 's/[0-9a-f]\\+/\"&\"/g' ; echo '}'; }; f"
    restore = "!f() { git checkout $(git rev-list -n 1 HEAD -- $1)~1 -- $(git diff --name-status $(git rev-list -n 1 HEAD -- $1)~1 | grep '^D' | cut -f 2); }; f"
    untracked = "ls-files --others --exclude-standard"
[color]
    ui = true

[diff]
    algorithm = patience
    tool = meld
[push]
    default = simple
