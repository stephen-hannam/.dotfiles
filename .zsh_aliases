tidy_up_ip_folders(){
	if [ -d ./ip/ ]; then
		pushd ip
		for f in `ls -d --color=none *`; do
			pushd $f
			rm -rf ^*.(xci|tcl)
			popd
		done
		popd
	fi
}

tidy_up_vivados_mess(){
